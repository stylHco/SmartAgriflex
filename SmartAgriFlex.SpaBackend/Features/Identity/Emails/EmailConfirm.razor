@using SmartAgriFlex.SpaBackend.Emails
@using Microsoft.AspNetCore.Components.Sections

<LayoutView Layout="typeof(EmailLayout)">
    <SectionContent SectionName="head">
        <title> Nutritionist - Activate your Account.</title>
    </SectionContent>

    <SectionContent SectionName="header">
        <strong>
            Your Account was Successfully Created!
            <br />
        </strong>
        Activate it by clicking the Button Below.
    </SectionContent>

    <table border='0' cellpadding='0' cellspacing='0' role='presentation' style='border-collapse:separate;line-height:100%;'>
        <tr>
            <td align='center' bgcolor='#84AF52' role='presentation' style='background-color:#84AF52;border:none;border-radius:5px;cursor:auto;padding:10px 25px;' valign='middle'>
                <a href='@Payload?.CallbackUrl' style='background:#84AF52;color:#ffffff;font-family:Oxygen, Helvetica neue, sans-serif;font-size:14px;font-weight:400;line-height:21px;margin:0;text-decoration:none;text-transform:none;' target='_blank'>
                    ACTIVATE
                </a>
            </td>
        </tr>
    </table>
</LayoutView>

@code {
    [Parameter]
    public EmailConfirmPayload? Payload { get; set; }
}